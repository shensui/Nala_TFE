{% extends '::CoreLayout.html.twig' %}

{% block title %}
    {{ parent() }} | index
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/core/css/jquery.datetimepicker.css') }}">
    <style>

    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/core/js/jquery.datetimepicker.full.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function(){
            jQuery.datetimepicker.setLocale('fr');

            $('.datepikerD').datetimepicker({
                timepicker:false,
                mask:false,
                format:'Y-m-d'
            });
            $('.datepikerF').datetimepicker({
                timepicker:false,
                format:'Y-m-d',
                mask:false
            });
        });
    </script>
{% endblock %}

{% block site_nav %}
    <li>
        <a href="{{ path('core_homepage') }}" class="actif">Home(v)</a>
    </li>
    <li><a href="#">Portfolio(?)</a></li>
    <li><a href="{{ path('core_about') }}">A Propos(x)</a></li>
    <li><a href="{{ path('fos_user_profile_show') }}">Membres (v)</a></li>
    <li><a href="{{ path('core_Contacte') }}">Contact(x)</a></li>
{% endblock %}

{% block contenue %}
    <div class="col-lg-12 col-sm-12 col-xs-12 contenu">
        <div class="row">
            <p class="slogon">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                Aliquid aspernatur at, distinctio dolorem ea ex impedit magnam molestiae neque, nihil nobis possimus quod rerum ut velit voluptate voluptatum? Earum, obcaecati.
            </p>
        </div>
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                {{ form_start(form,{'attr': {'class': 'form-index'}}) }}
                <h2>Formulaire:</h2>
                {{ form_errors(form) }}

                <div class="row" style="padding: 0 10px;">
                    <div class="form-group col-lg-12">
                        {{ form_label(form.type, 'Type d\'animal :') }}
                        {{ form_widget(form.type) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12" style="text-align: center;">
                        {{ form_widget(form.min_date) }}
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        {{ form_widget(form.max_date) }}
                    </div>
                </div>
                <div class="row" style="padding: 0 10px;">
                    <div class="form-group col-lg-12">
                        {{ form_label(form.ville, 'Ville :') }}
                        {{ form_widget(form.ville) }}
                    </div>
                </div>
                <div class="form-group" style="text-align: center;">
                    {{ form_widget(form.trouver) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

