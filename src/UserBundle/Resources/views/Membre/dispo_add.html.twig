{% extends "UserBundle::UserLayout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/core/css/jquery.datetimepicker.css') }}">
    <style>

    </style>
{% endblock %}

{% block title %}
    {{ parent() }} | {{ app.user.username }}
{% endblock %}

{% block site_nav %}
    <li>
        <a href="{{ path('core_homepage') }}" class="">Home(v)</a>
    </li>
    <li>
        <a href="#">Portfolio(?)</a>
    </li>
    <li>
        <a href="{{ path('core_about') }}">A Propos(x)</a>
    </li>
    <li>
        <a href="{{ path('fos_user_profile_show') }}">Membres (v)</a>
    </li>
    <li>
        <a href="{{ path('core_Contacte') }}">Contact(x)</a>
    </li>
{% endblock %}

{% block fos_user_content %}
    <div class="row">
        {{ dump() }}
        <div class="col-lg-12">
            <div class="well">
                <h2>Ajoux d'un disponibilit√©e.</h2>

                {{ form_start(form) }}
                <div class="row">
                    <div class="form-goup col-sm-12">
                        {{ form_errors(form.animal) }}
                        {{ form_label(form.animal, 'Le type d\'animal') }}
                        {{ form_widget(form.animal) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="form-group col-sm-6">
                        {{ form_errors(form.dispoDebut) }}
                        {{ form_label(form.dispoDebut, 'Disponible du :') }}
                        {{ form_widget(form.dispoDebut) }}
                    </div>
                    <div class="form-group col-sm-6">
                        {{ form_errors(form.dispoFin) }}
                        {{ form_label(form.dispoFin, 'Aux :') }}
                        {{ form_widget(form.dispoFin) }}
                    </div>
                    <div class="form-group col-sm-12">
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="form-goup col-sm-12">
                        {{ form_widget(form.ajouter) }}
                        {{ form_rest(form) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock fos_user_content %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/core/js/jquery.datetimepicker.full.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function(){
            $('.datepikerD').datetimepicker({
                timepicker:false,
                mask:true,
                format:'Y-m-d'
            });
            $('.datepikerF').datetimepicker({
                timepicker:false,
                format:'Y-m-d',
                mask:true
            });
        });
    </script>
{% endblock %}