{% block fos_user_content %}
    <div class="row">
        {{ dump() }}
        <div class="col-lg-12">
            <div class="well">
                <h2>Ajoux d'un Animal.</h2>

                {#{{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}#}
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="form-goup col-sm-12">
                        {{ form_errors(form.name) }}
                        {{ form_label(form.name, 'Nom de l\'animal') }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="form-group col-sm-4">
                        {{ form_errors(form.type) }}
                        {{ form_label(form.type, 'Type d\'animal:') }}
                        {{ form_widget(form.type, {'attr': {'class': 'form-control datepikerD'}}) }}
                    </div>
                    <div class="form-group col-sm-4">
                        {{ form_errors(form.sexe) }}
                        {{ form_label(form.sexe, 'Sexe:') }}
                        {{ form_widget(form.sexe, {'attr': {'class': 'form-control datepikerF'}}) }}
                    </div>
                    <div class="form-group col-sm-4">
                        {{ form_errors(form.age) }}
                        {{ form_label(form.age, 'Age:') }}
                        {{ form_widget(form.age, {'attr': {'class': 'form-control datepikerF'}}) }}
                    </div>
                    <div class="form-group col-sm-12">
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="form-goup col-sm-12">
                        {{ form_errors(form.santee) }}
                        {{ form_label(form.santee, 'Etats de sant√©e') }}
                        {{ form_widget(form.santee, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="form-goup col-sm-12">
                        {{ form_widget(form.ajouter) }}
                        {{ form_rest(form) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
