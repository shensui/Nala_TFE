{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form,
{'method': 'post',
 'action': path('fos_user_registration_register'),
 'attr': {'class': 'fos_user_registration_register form-index', 'style': 'width: 75%; margin: auto;'}}) }}
    {#{{ form_widget(form) }}#}
    <h2>Formulaire d'inscription:</h2>
    <fieldset>
        <legend>* Données d'enregistrement</legend>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    {{ form_errors(form.username) }}
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username,{ attr:{'class': 'form-control' }}) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.email) }}
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email,{ attr:{'class': 'form-control', 'placeholder': 'mail@domaine.xxx' }}) }}
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    {{ form_errors(form.plainPassword.first) }}
                    {{ form_label(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first,{ attr:{'class': 'form-control', 'placeholder': '****' }}) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.plainPassword.second) }}
                    {{ form_label(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second,{ attr:{'class': 'form-control', 'placeholder': '****' }}) }}
                </div>
            </div>
        </div>
    </fieldset>
    <hr>
    <fieldset>
        <legend>Coordonnées personele</legend>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    {{ form_errors(form.sexe) }}
                    {{ form_label(form.sexe, '* Vous êtes') }}
                    {{ form_widget(form.sexe) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    {{ form_errors(form.nom) }}
                    {{ form_label(form.nom, '* Votre nom') }}
                    {{ form_widget(form.nom) }}
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    {{ form_errors(form.prenom) }}
                    {{ form_label(form.prenom, '* Votre prénom') }}
                    {{ form_widget(form.prenom) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    {{ form_errors(form.numTel) }}
                    {{ form_label(form.numTel, 'Votre N° de Telephonne') }}
                    {{ form_widget(form.numTel) }}
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    {{ form_errors(form.numGsm) }}
                    {{ form_label(form.numGsm, 'Votre N° de GSM') }}
                    {{ form_widget(form.numGsm) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <fieldset>
                    <legend>Adresse</legend>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_errors(form.adrRue) }}
                                {{ form_label(form.adrRue, 'Votre Rue + N°') }}
                                {{ form_widget(form.adrRue) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                {{ form_errors(form.adrCp) }}
                                {{ form_label(form.adrCp, '* Votre Code Postal°') }}
                                {{ form_widget(form.adrCp) }}
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-group">
                                {{ form_errors(form.adrVille) }}
                                {{ form_label(form.adrVille, '* Votre Ville') }}
                                {{ form_widget(form.adrVille) }}
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </fieldset>
    <div>
      {{ form_rest(form) }}
    </div>
    <div class="form-group">
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary btn-lg center" />
    </div>
{{ form_end(form) }}
